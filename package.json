{
  "name": "fh-elm-with-backend-skeleton",
  "version": "1.0.0",
  "description": "App with backend skeleton for PM102 and MI133 classes.",
  "scripts": {
    "start": "npx nodemon --watch ./src/app -e elm --exec npx babel-node -- ./src/backend/index.js",
    "app": "./scripts/start-app.sh",
    "backend": "./scripts/start-backend.sh",
    "deploy": "export PROJECT_NAME=`cat project_name` && cd dist && gcloud app deploy --project $PROJECT_NAME",
    "test": "npx jest --coverage"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "events": {
      "restart": "elm make ./src/app/Main.elm --output ./public/elm.js"
    },
    "watch": [
      "./src/",
      "./public"
    ]
  },
  "author": "Michael Jonathan Lee",
  "dependencies": {
    "koa": "^2.5.3",
    "koa-body": "^4.0.6",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.1.5",
    "lodash": "^4.17.10",
    "swig": "^1.4.2",
    "koa-send": "latest"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-loader": "^8.0.2",
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.5.4",
    "css-loader": "^1.0.0",
    "elm-webpack-loader": "^5.0.0",
    "git-revision-webpack-plugin": "^3.0.3",
    "html-webpack-plugin": "^3.1.0",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "koa-livereload": "^0.2.0",
    "node-sass": "^4.8.3",
    "nodemon": "^1.18.4",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "webpack": "^4.5.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.1"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "jest-extended"
  }
}
